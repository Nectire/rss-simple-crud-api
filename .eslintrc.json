{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      "semi": ["warn", "always"],
      "qoutes": ["warn", "single"],
      "max-len": ["warn", { "code": 100 }]
    }
}
